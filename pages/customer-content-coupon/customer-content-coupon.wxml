<!-- pages/customer-content-coupon/customer-content-coupon.wxml -->
<view class='list-coupon'>
    <!-- <view class='empty'>没有优惠券</view> -->
    <!-- item start -->
    <view class='item'>
        <image class='background' src='/image/background-coupon.png'></image>
        <view class='item-inner'>
            <view class='type'>
                <view class='type-number'>
                    <text class='prefix'>¥</text>
                    <text class='number'>10</text>
                </view>
                <text class='type-text'>满50可用</text>
            </view>
            <view class='info'>
                <text class='name'>满减体验券</text>
                <view class='info-inner'>
                    <view class='info-inner-text'>
                        <text class='text'>有效期至: 2019-12-31</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!-- item over -->
    <!-- item start -->
    <view class='item'>
        <image class='background' src='/image/background-coupon.png'></image>
        <view class='item-inner'>
            <view class='type'>
                <view class='type-number'>
                    <text class='number'>8</text>
                    <text class='suffix'>折</text>
                </view>
                <text class='type-text'>满50可用</text>
            </view>
            <view class='info'>
                <text class='name'>折扣体验券</text>
                <view class='info-inner'>
                    <view class='info-inner-text'>
                        <text class='text'>有效期至: 2019-12-31</text>
                    </view>
                </view>
            </view>
        </view>
    </view>
    <!-- item over -->
</view>
