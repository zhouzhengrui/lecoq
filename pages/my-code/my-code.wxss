/* pages/my-code/my-code.wxss */

page {
    height: 100%;
    background-color: #fafafa;
}

.code-container {
    padding: 60rpx;
}

.code-header {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background-color: #f2f2f2;
    border: 1rpx solid #e6e6e6;
    border-bottom: none;
    border-top-left-radius: 8rpx;
    border-top-right-radius: 8rpx;
}

.code-header .avatar {
    display: flex;
    align-items: center;
    width: 85rpx;
    height: 85rpx;
    margin-right: 20rpx;
    border-radius: 50%;
    background-color: #f2f2f2;
}

.code-header .avatar image {
    width: 85rpx;
    height: 85rpx;
    border-radius: 50%;
}

.code-header .info {
    display: flex;
    flex-direction: column;
}

.code-header .name {
    font-size: 32rpx;
    margin-bottom: 5rpx;
}

.code-header .label {
    font-size: 24rpx;
    color: #b3b3b3;
}

.code-image {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 100rpx 0;
    border-left: 1rpx solid #e6e6e6;
    border-right: 1rpx solid #e6e6e6;
    background-color: #fff;
}

.code-image image {
    width: 438rpx;
    height: 438rpx;
}

.code-footer {
    padding: 30rpx;
    background-color: #f2f2f2;
    border: 1rpx solid #e6e6e6;
    border-top: none;
    border-bottom-left-radius: 8rpx;
    border-bottom-right-radius: 8rpx;
}

.code-footer text {
    display: block;
    font-size: 30rpx;
    text-align: center;
    line-height: 1.6;
}
