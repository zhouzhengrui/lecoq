/* pages/customer-label-edit/customer-label-edit.wxss */

page {
    background-color: #f7f7f7;
}

.main-scroll {
    height: calc(100vh - 100rpx);
}

.label-edit-title {
    padding: 12rpx 46rpx;
    font-size: 28rpx;
}

.label-area {
    padding: 10rpx 46rpx;
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #fff;
}

.label-area .label {
    display: inline-flex;
    align-items: center;
    padding: 10rpx 20rpx;
    border-radius: 8rpx;
    font-size: 24rpx;
    margin-right: 10rpx;
}

.label-area .label .space {
    margin: 0 10rpx;
    font-size: 24rpx;
    opacity: 0.3;
}

.list-link .item {
    padding: 18rpx 46rpx;
}

.list-customer {
    border-bottom: none;
}

.list-customer .item {
    padding-left: 46rpx;
}
