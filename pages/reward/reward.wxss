.list-reward .item {
    position: relative;
    padding: 46rpx 30rpx;
    margin-bottom: 20rpx;
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #fff;
}
.list-reward .item-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 30rpx;
}
.list-reward .item-header .date {
    color: #b3b3b3;
}
.list-reward .item-body {
    padding: 54rpx 30rpx;
}
.list-reward .item-body .info {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-size: 24rpx;
    color: #b3b3b3;
}
.list-reward .item-body .info-group > text {
    margin-right: 14rpx;
    color: #999;
}
.list-reward .item-body .info-group .color-1 {
    font-size: 28rpx;
}
.list-reward .progress {
    height: 10rpx;
    margin-top: 20rpx;
    border-radius: 5rpx; 
    background-color: #dddddd;
    overflow: hidden;
}
.list-reward .progress-bar {
    height: 10rpx;
    border-radius: 5rpx; 
    background-color: #4796fa;
}
.list-reward .item-footer .button {
    width: 250rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
}
.list-reward .item-footer .button[disabled] {
    opacity: 1;
    color: #fff !important;
    background-color: #dddddd !important;
}
.list-reward .item-footer .button.button-complete[disabled] {
    opacity: 0.5;
    color: #fff !important;
    background-color: #4796fa !important;
}
.list-reward .seal {
    width: 150rpx;
    height: 150rpx;
    position: absolute;
    right: 270rpx;
    top: 30rpx;
}