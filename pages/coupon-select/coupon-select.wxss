/* pages/coupon-select/coupon-select.wxss */

page {
    background-color: #fafafa;
}

.main-scroll {
    height: calc(100vh - 100rpx);
}

.list-coupon {
    padding-bottom: 6rpx;
}

.page-footer {
    justify-content: center;
}

.page-footer button.button {
    width: 360rpx;
    font-size: 30rpx;
}

.list-customer {
    border: none;
}

.list-customer .checkbox-group {
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.list-customer .checkbox {
    margin-top: -8rpx;
}

.list-customer .checkbox .wx-checkbox-input {
    width: 36rpx;
    height: 36rpx;
    border-radius: 8rpx;
}

.coupon-select-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #fff;
}

.coupon-select-header .title {
    font-size: 30rpx;
    padding-left: 30rpx;
}

.coupon-select-header .number {
    padding: 0 4rpx;
    color: #e3a239;
}

.coupon-select-header .action {
    display: flex;
    align-items: center;
    padding-right: 12rpx;
}

.coupon-select-header .coupon-select-header-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 88rpx;
    height: 100rpx;
}

.coupon-select-header .coupon-select-header-button image {
    width: 42rpx;
    height: 42rpx;
}

.coupon-select-header .coupon-select-header-button.navigator-hover {
    background-color: rgba(0, 0, 0, 0);
}
