<!-- customer.wxml -->
<!-- search start -->
<view class='search-bar'>
    <image class='icon' src='/image/icon-search.png'></image>
    <input class='input' placeholder='姓名、手机号' confirm-type='search' />
</view>
<!-- search over -->
<scroll-view class='main-scroll' scroll-y enable-back-to-top>
    <!-- list start -->
    <view class='list-customer'>
        <!-- item start -->
        <navigator class='item arrow' url='/pages/customer-adviser/customer-adviser'>
            <view class='avatar'>
                <image class='image' src='/image/icon-8.png'></image>
            </view>
            <view class='info'>
                <text class='name'>已绑定顾问顾客</text>
            </view>
        </navigator>
        <!-- item over -->
        <!-- item start -->
        <navigator class='item arrow' url='/pages/customer-label/customer-label'>
            <view class='avatar'>
                <image class='image' src='/image/icon-9.png'></image>
            </view>
            <view class='info'>
                <text class='name'>标签</text>
            </view>
        </navigator>
        <!-- item over -->
    </view>
    <!-- list over -->
    <view class='divider'></view>
    <!-- list start -->
    <view class='list-customer'>
        <!-- <view class='empty'>加载中...</view> -->
        <!-- item start -->
        <navigator class='item arrow' url='/pages/customer-content/customer-content'>
            <view class='avatar'>
                <image class='image' src='/image/image-default.jpg'></image>
