                    </view>
                </view>
            </view>
        </navigator>
        <!-- item over -->
        <!-- item start -->
        <navigator class='item arrow' url='/pages/customer-content/customer-content'>
            <view class='avatar'>
                <image class='image' src='/image/image-default.jpg'></image>
                <image class='badge' src='/image/icon-man.png'></image>
            </view>
            <view class='info'>
                <view class='row'>
                    <text class='name'>马云</text>
                </view>
                <view class='row'>
                    <view class='label-group'>
                        <text class='label-icon rank'>黄金会员</text>
                        <text class='label-icon phone'>13855558888</text>
                    </view>
                </view>
            </view>
        </navigator>
        <!-- item over -->
        <!-- item start -->
        <navigator class='item arrow' url='/pages/customer-content/customer-content'>
            <view class='avatar'>
                <image class='image' src='/image/image-default.jpg'></image>
                <image class='badge' src='/image/icon-unknown.png'></image>
            </view>
            <view class='info'>
                <view class='row'>
                    <text class='name'>冯绍峰</text>
