/* pages/coupon-select-search/coupon-select-search.wxss */

page {
    background-color: #f7f7f7;
}

.main-scroll {
    height: calc(100vh - 100rpx);
}

.main-scroll {
    margin-top: 114rpx;
    height: calc(100vh - 100rpx - 114rpx);
}

.search-bar {
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
    right: 0;
    display: flex;
    align-items: center;
    width: 100%;
    height: 114rpx;
    padding: 15rpx 0 30rpx 30rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #e6e6e6;
}

.search-bar .icon {
    position: absolute;
    z-index: 2;
    top: 32rpx;
    left: 50rpx;
    width: 32rpx;
    height: 32rpx;
}

.search-bar .input {
    flex-grow: 1;
    height: 70rpx;
    padding-left: 74rpx;
    border-radius: 8rpx;
    background-color: #f7f7f7;
    font-size: 28rpx;
    border: 1rpx solid #e6e6e6;
}
.search-bar .cancel {
    padding: 18rpx 30rpx;
    background-color: #fff;
    font-size: 32rpx;
    border: none;
    line-height: 1;
}
.search-bar .cancel::after {
    border: 0;
}

.page-footer {
    justify-content: center;
}

.page-footer button.button {
    width: 360rpx;
    font-size: 30rpx;
}

.list-customer {
    border: none;
}

.list-customer .checkbox-group {
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.list-customer .checkbox {
    margin-top: -8rpx;
}

.list-customer .checkbox .wx-checkbox-input {
    width: 36rpx;
    height: 36rpx;
    border-radius: 8rpx;
}
