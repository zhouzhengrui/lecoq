/* pages/customer-label-add/customer-label-add.wxss */

page {
    background-color: #f7f7f7;
}

.main-scroll {
    height: calc(100vh - 100rpx);
}


.label-input {
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #fff;
}

.label-input input {
    height: 100rpx;
    font-size: 26rpx;
    padding: 0 30rpx;
}

.card-label {
    padding: 30rpx 30rpx 10rpx;
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #fff;
}

.card-label-title {
    display: block;
    color: #b3b3b3;
    font-size: 26rpx;
    margin-bottom: 40rpx;
}

.label-group {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
}

.label-group .label-item {
    flex-shrink: 0;
    position: relative;
    margin-right: 20rpx;
    margin-bottom: 30rpx;
}
.label-group .label {
    display: inline-flex;
    align-items: center;
    padding: 12rpx 20rpx;
    border-radius: 8rpx;
    font-size: 26rpx;
}

.label-group .label-delete {
    position: absolute;
    top: -12rpx;
    right: -12rpx;
    width: 30rpx;
    height: 30rpx;
}