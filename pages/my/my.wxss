/* pages/my/my.wxss */

page {
    background-color: #f7f7f7;
}

.banner-user {
    display: flex;
    align-items: center;
    flex-direction: column;
    height: 410rpx;
}
.banner-user .avatar {
    position: relative;
    z-index: 2;
    width: 150rpx;
    height: 150rpx;
    margin-top: 30rpx;
    margin-bottom: 25rpx;
    border-radius: 50%;
    border: 4rpx solid #3081ea;
}
.banner-user .avatar .image {
    width: 142rpx;
    height: 142rpx;
    border-radius: 50%;
}
.banner-user .info {
    position: relative;
    z-index: 2;
    display: flex;
    align-items: center;
    flex-direction: column;
    color: #fff;
}
.banner-user .info .name {
    font-size: 32rpx;
} 
.banner-user .info .label {
    font-size: 24rpx;
    margin-top: 10rpx;
} 
.list-my {
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #fff;
}

.list-my-first {
    border-top: none;
    padding-top: 30rpx;
}

.list-my .item {
    display: flex;
    align-items: stretch;
    padding-left: 30rpx;
    background-size: 24rpx;
    background-repeat: no-repeat;
    background-position: center right 30rpx;
    background-image: url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' width='50px' height='50px' viewBox='0 0 50 50'><path fill='#d3d3d3' d='M25.491,0.719c-1.056-0.998-2.722-0.951-3.72,0.107c-0.998,1.056-0.95,2.722,0.107,3.72L43.537,25L21.878,45.457c-1.057,0.997-1.104,2.662-0.107,3.719C22.289,49.726,22.985,50,23.685,50c0.648,0,1.297-0.237,1.806-0.717l23.685-22.369C49.702,26.416,50,25.725,50,25s-0.298-1.416-0.824-1.913L25.491,0.719z'/></svg>");
}

.list-my .icon {
    width: 50rpx;
    height: 50rpx;
    margin: 30rpx 35rpx 30rpx 0;
}

.list-my .icon .image {
    width: 50rpx;
    height: 50rpx;
}

.list-my .info {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #e6e6e6;
}
.list-my .info .name {
    font-size: 30rpx;
}

.list-my .item:last-child .info {
    border-bottom: none;
}