.action-group {
    display: flex;
    align-items: center;
    justify-content: space-around;
    padding: 24rpx 30rpx;
    background-color: #fff;
    border-bottom: 1rpx solid #e6e6e6;
}

.action-group .item {
    width: 88rpx;
    height: 88rpx;
}

.action-group .item image {
    width: 88rpx;
    height: 88rpx;
}

.action-group view.item:active {
    opacity: 0.7;
}

.customer-content-label {
    background-color: #fff;
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
}

.customer-content-label-title {
    padding: 20rpx 30rpx;
    font-size: 30rpx;
    background-size: 24rpx;
    background-repeat: no-repeat;
    background-position: center right 30rpx;
    background-image: url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' width='50px' height='50px' viewBox='0 0 50 50'><path fill='#d3d3d3' d='M25.491,0.719c-1.056-0.998-2.722-0.951-3.72,0.107c-0.998,1.056-0.95,2.722,0.107,3.72L43.537,25L21.878,45.457c-1.057,0.997-1.104,2.662-0.107,3.719C22.289,49.726,22.985,50,23.685,50c0.648,0,1.297-0.237,1.806-0.717l23.685-22.369C49.702,26.416,50,25.725,50,25s-0.298-1.416-0.824-1.913L25.491,0.719z'/></svg>");
}

.customer-content-label-group {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    padding-left: 30rpx;
    padding-bottom: 10rpx;
}

.customer-content-label-group .label {
    display: inline-flex;
    align-items: center;
    padding: 8rpx 12rpx;
    border-radius: 8rpx;
    font-size: 22rpx;
    margin-right: 10rpx;
    margin-bottom: 20rpx;
    white-space: nowrap;
}

.customer-content-label-group .label .space {
    margin: 0 6rpx;
    font-size: 20rpx;
    opacity: 0.3;
}

.customer-content-label-group .label-more {
    display: inline-flex;
    align-items: center;
    height: 48rpx;
    padding: 0 10rpx;
    margin-bottom: 20rpx;
    border-radius: 8rpx;
    background-color: #fff;
    border: 1rpx solid #e6e6e6;
}

.customer-content-label-group .label-more image {
    width: 48rpx;
    height: 22rpx;
}

.customer-content-info {
    font-size: 24rpx;
    background-color: #fff;
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    padding-left: 30rpx;
}

.customer-content-info .item {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    padding: 26rpx 30rpx 26rpx 0;
    border-bottom: 1rpx solid #e6e6e6;
}

.customer-content-info .item:last-child {
    border-bottom: none;
}

.customer-content-info .name {
    white-space: nowrap;
    margin-right: 30rpx;
}

.customer-content-info .info {
    color: #b3b3b3;
}

.list-customer-content {
    border-top: 1rpx solid #e6e6e6;
    border-bottom: 1rpx solid #e6e6e6;
    background-color: #fff;
}

.list-customer-content navigator.item {
    display: flex;
    align-items: stretch;
    padding-left: 30rpx;
    background-size: 24rpx;
    background-repeat: no-repeat;
    background-position: center right 30rpx;
    background-image: url("data:image/svg+xml;charset=utf8,<svg xmlns='http://www.w3.org/2000/svg' width='50px' height='50px' viewBox='0 0 50 50'><path fill='#d3d3d3' d='M25.491,0.719c-1.056-0.998-2.722-0.951-3.72,0.107c-0.998,1.056-0.95,2.722,0.107,3.72L43.537,25L21.878,45.457c-1.057,0.997-1.104,2.662-0.107,3.719C22.289,49.726,22.985,50,23.685,50c0.648,0,1.297-0.237,1.806-0.717l23.685-22.369C49.702,26.416,50,25.725,50,25s-0.298-1.416-0.824-1.913L25.491,0.719z'/></svg>");
}

.list-customer-content navigator.item .info {
    padding: 30rpx 64rpx 30rpx 0;
}

.list-customer-content view.item {
    display: flex;
    align-items: stretch;
    padding-left: 30rpx;
}

.list-customer-content view.item .info {
    padding: 30rpx 30rpx 30rpx 0;
}

.list-customer-content .icon {
    width: 50rpx;
    height: 50rpx;
    margin: 30rpx 35rpx 30rpx 0;
}

.list-customer-content .icon image {
    width: 50rpx;
    height: 50rpx;
}

.list-customer-content .info {
    flex-grow: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1rpx solid #e6e6e6;
}

.list-customer-content .info .name {
    font-size: 28rpx;
}

.list-customer-content .info .number {
    font-size: 28rpx;
    color: #4796fa;
}

.list-customer-content .item:last-child .info {
    border-bottom: none;
}
