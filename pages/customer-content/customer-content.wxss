.banner-customer-content.navigator-hover {
    background-color: rgba(0, 0, 0, 0);
}

.banner-customer-content .avatar {
    position: relative;
    width: 134rpx;
    height: 134rpx;
    margin: 20rpx 25rpx 20rpx 0;
    border-radius: 50%;
    border: 4rpx solid #3081ea;
}

.banner-customer-content .avatar .image {
    width: 126rpx;
    height: 126rpx;
    border-radius: 50%;
}

.banner-customer-content .avatar .badge {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 32rpx;
    height: 32rpx;
    border-radius: 50%;
    border: 1rpx solid #fff;
}

.banner-customer-content .info {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: #fff;
}

.banner-customer-content .info .row {
    display: flex;
    align-items: center;
    margin-bottom: 8rpx;
}

.banner-customer-content .info .row:last-child {
    margin-bottom: 0;
}

.banner-customer-content .info .name {
    font-size: 30rpx;
}

.banner-customer-content .info .label-text {
    font-size: 24rpx;
}

.banner-customer-content .info .label-group {
    font-size: 24rpx;
}

.banner-customer-content .info .label-group .label-icon {
    margin-right: 24rpx;
    padding-left: 32rpx;
    background-size: 24rpx;
    background-repeat: no-repeat;
    background-position: center left;
}

