/* pages/customer-adviser/customer-adviser.wxss */
page {
    background-color: #f7f7f7;
}

.main-scroll {
    margin-top: 114rpx;
    height: calc(100vh - 114rpx);
}

.search-bar {
    position: fixed;
    z-index: 99;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    height: 114rpx;
    padding: 15rpx 30rpx 30rpx;
    background-color: #4796fa;
}

.search-bar .icon {
    position: absolute;
    z-index: 2;
    top: 32rpx;
    left: 62rpx;
    width: 32rpx;
    height: 32rpx;
}

.search-bar .input {
    height: 70rpx;
    padding-left: 88rpx;
    border-radius: 35rpx;
    background-color: #fff;
    font-size: 28rpx;
}
